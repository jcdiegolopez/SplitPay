<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Regular -->
    <font
        android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/be_vietnam_pro_regular" />

    <!-- Italic -->
    <font
        android:fontStyle="italic"
        android:fontWeight="400"
        android:font="@font/be_vietnam_pro_italic" />

    <!-- Bold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/be_vietnam_pro_bold" />

    <!-- Bold Italic -->
    <font
        android:fontStyle="italic"
        android:fontWeight="700"
        android:font="@font/be_vietnam_pro_bolditalic" />

    <!-- Black -->
    <font
        android:fontStyle="normal"
        android:fontWeight="900"
        android:font="@font/be_vietnam_pro_black" />

    <!-- Black Italic -->
    <font
        android:fontStyle="italic"
        android:fontWeight="900"
        android:font="@font/be_vietnam_pro_blackitalic" />

    <!-- ExtraBold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="800"
        android:font="@font/be_vietnam_pro_extrabold" />

    <!-- ExtraBold Italic -->
    <font
        android:fontStyle="italic"
        android:fontWeight="800"
        android:font="@font/be_vietnam_pro_extrabolditalic" />

    <!-- SemiBold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/be_vietnam_pro_semibold" />

    <!-- SemiBold Italic -->
    <font
        android:fontStyle="italic"
        android:fontWeight="600"
        android:font="@font/be_vietnam_pro_semibolditalic" />

    <!-- Medium -->
    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/be_vietnam_pro_medium" />

    <!-- Medium Italic -->
    <font
        android:fontStyle="italic"
        android:fontWeight="500"
        android:font="@font/be_vietnam_pro_mediumitalic" />

    <!-- Light -->
    <font
        android:fontStyle="normal"
        android:fontWeight="300"
        android:font="@font/be_vietnam_pro_light" />

    <!-- Light Italic -->
    <font
        android:fontStyle="italic"
        android:fontWeight="300"
        android:font="@font/be_vietnam_pro_lightitalic" />

    <!-- ExtraLight -->
    <font
        android:fontStyle="normal"
        android:fontWeight="200"
        android:font="@font/be_vietnam_pro_extralight" />

    <!-- ExtraLight Italic -->
    <font
        android:fontStyle="italic"
        android:fontWeight="200"
        android:font="@font/be_vietnam_pro_extralightitalic" />

    <!-- Thin -->
    <font
        android:fontStyle="normal"
        android:fontWeight="100"
        android:font="@font/be_vietnam_pro_thin" />

    <!-- Thin Italic -->
    <font
        android:fontStyle="italic"
        android:fontWeight="100"
        android:font="@font/be_vietnam_pro_thinitalic" />

</font-family>
